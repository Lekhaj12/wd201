{
  "name": "todo-cli",
  "version": "1.0.0",
  "description": "A simple CLI for managing todos",
  "main": "todo.js",
  "scripts": {
    "test": "jest",
    "format": "prettier --write .",
    "lint": "eslint ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test && npm run format"
    }
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.0.0",
    "prettier": "^2.4.1"
  },
  "dependencies": {},
  "eslintConfig": {
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "rules": {
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["error", "double"]
    },
    "env": {
      "node": true,
      "jest": true
    }
  }
}
